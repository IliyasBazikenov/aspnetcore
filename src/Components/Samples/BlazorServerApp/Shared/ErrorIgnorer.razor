@implements IErrorBoundary
@ChildContent
@code {
    // This represents a badly-behaved IErrorBoundary that tries to keep rendering the
    // same content even after an error. Error boundaries shouldn't do this since it
    // risks an infinite rendering loop if the child content throws immediately on
    // rendering.

    [Parameter] public RenderFragment? ChildContent { get; set; }

    public void HandleException(Exception ex)
    {
        Console.WriteLine($"Got an error, but will try to pretend it didn't happen: {ex.Message}");

        // Trying to bring back the child content
        StateHasChanged();
    }
}
